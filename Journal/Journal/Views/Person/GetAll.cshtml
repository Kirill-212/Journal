@model Journal.Paging.PagedList<Journal.Dto.Get.GetPersonDto>
@using Journal.Dto.Get

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Отдел</th>
                <th>Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GetPersonDto i in Model)
            {
                <tr>
                    <th>@i.Id</th>
                    <th>@i.FirstName</th>
                    <th>@i.LastName</th>
                    <th>@i.Surname</th>
                    <th>@i.GetDepartmentDto.ShortName</th>
                    <th>
                        <div class="input-group">
                            <a asp-action="Delete"
                           asp-route-id="@i.Id"
                           asp-route-pageNumber="@(Model.CurrentPage)"
                           class="btn btn-danger">
                                Удалить
                            </a>
                            <a asp-action="Update"
                           asp-route-id="@i.Id"
                           class="btn btn-primary" role="button">
                                Изменить
                            </a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.HasPrevious)
    {
        <a asp-action="GetAll"
       asp-route-PageNumber="@(Model.CurrentPage - 1)"
       class="btn btn-outline-dark">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Назад
        </a>
    }
    @if (Model.HasNext)
    {
        <a asp-action="GetAll"
       asp-route-PageNumber="@(Model.CurrentPage + 1)"
       class="btn btn-outline-dark">
            Вперед
            <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
    }
</div>
